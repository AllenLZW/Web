@model web4.List

@{
    ViewBag.Title = "刪除";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p> </p>
<h4>登記清單</h4>

<div>
    <div class="alert alert-danger" role="alert">
        請確認是否刪除?
    </div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Title)*@
            報修物件
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.State)*@
            報修狀態
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.CreateTime)*@
            登記時間
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateTime)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.ModifyTime)*@
            完成時間
        </dt>

        <dd>
            @{
                if (Model.State == true)
                {
                    @Html.DisplayFor(model => model.ModifyTime)
                }
                else
                {
                    <p> </p>
                }
            }
            @Html.DisplayFor(model => model.ModifyTime)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input class="btn btn-danger" type="submit" value="刪除" class="btn btn-default" /> |
            <button type="button" class="btn btn-primary">@Html.ActionLink("返回", "Index", null, new { style = "color:white" })</button>
        </div>
    }
</div>
